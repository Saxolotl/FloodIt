<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uk.conortyler.floodit">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/fi_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/fi_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".GameViewActivity" />
        <activity
            android:name=".LeaderboardActivity"
            android:label="Leaderboard" />
        <activity
            android:name=".StatisticsActivity"
            android:label="Statistics" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name=".OptionActivity" />
        <activity android:name=".HowToActivity"></activity>
    </application>

</manifest>